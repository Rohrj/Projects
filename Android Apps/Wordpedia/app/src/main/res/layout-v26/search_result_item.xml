<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/definition_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/definition_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/definition_header"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/definition_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/partofspeech_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/partofspeech_header_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/part_of_speech_header"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/partofspeech_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/synonyms_antonyms_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/synonyms_section"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/synonyms_header_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/synonyms_header"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/synonyms_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/antonyms_section"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/antonyms_header_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/antonyms_header"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/antonyms_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>